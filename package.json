{
    "name": "@sinakhx/use-zustand-store",
    "version": "0.3.0",
    "description": "helpers for using zustand as a local store in react apps",
    "keywords": [
        "zustand",
        "react",
        "local",
        "store",
        "state",
        "hooks"
    ],
    "homepage": "https://github.com/Sinakhx/use-zustand-store#readme",
    "bugs": {
        "url": "https://github.com/Sinakhx/use-zustand-store/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Sinakhx/use-zustand-store.git"
    },
    "license": "MIT",
    "author": "Sina Khodabandehloo <khodabandehloo.sina@gmail.com>",
    "type": "module",
    "main": "lib/index.js",
    "scripts": {
        "lint": "eslint .",
        "lint-staged": "lint-staged",
        "lint:fix": "eslint --fix .",
        "prepare": "husky install",
        "prettier": "prettier --write .",
        "push": "git push --follow-tags",
        "release": "standard-version",
        "release:first": "npm run release -- --first-release && npm run push",
        "release:major": "npm run release -- --release-as major && npm run push && npm publish --access public",
        "release:minor": "npm run release -- --release-as minor && npm run push && npm publish --access public",
        "release:notag": "npm run release -- --no-git-tag-version && npm run push && npm publish --access public",
        "release:patch": "npm run release -- --release-as patch && npm run push && npm publish --access public",
        "release:alpha": "npm run release -- --prerelease alpha && npm run push && npm publish --access public",
        "test": "jest",
        "test:c": "jest --coverage",
        "test:w": "jest --watch --bail",
        "typecheck": "tsc --noEmit",
        "exp": "node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm lib/index.ts"
    },
    "dependencies": {
        "optics-ts": "^2.3.0",
        "react": "^16.0.0 || ^17.0.0 || ^18.0.0",
        "react-tracked": "^1.7.9",
        "zustand": "^4.0.0-rc.1"
    },
    "devDependencies": {
        "@babel/core": "*",
        "@babel/preset-env": "*",
        "@babel/preset-typescript": "*",
        "@commitlint/cli": "^17.0.2",
        "@commitlint/config-conventional": "^17.0.2",
        "@types/jest": "*",
        "@types/node": "^17.0.39",
        "@types/react": "^18.0.11",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "babel-jest": "*",
        "eslint": "^8.17.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.4.6",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "jest": "*",
        "lint-staged": "^13.0.0",
        "prettier": "^2.6.2",
        "scheduler": "^0.22.0",
        "standard-version": "^9.5.0",
        "ts-node": "^10.8.1",
        "tsup": "*",
        "typescript": "*"
    }
}
